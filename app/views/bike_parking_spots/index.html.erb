<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<div role="main">

  <div id="header">
    <div class="container_home">
      <h1> These are the </br> Bike Racks Near You </h1>
    </div>
  </div>

  <div>
    <div id="map" style='width: 100%; height: 557px;'></div>
  </div>

  <div class="line"></div>
  <table class="all_bike_parking_spots">
    <thead>
      <tr>
        <th>Location</th>
        <th>Address</th>
        <th>Placement</th>
        <th>Racks</th>
        <th>Spaces</th>
        <th>Mile(s) Away</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @bike_parking_spots.each do |bike_parking_spot| %>
        <tr>
          <td><%= bike_parking_spot.location %></td>
          <td><%= bike_parking_spot.address %></td>
          <td><%= bike_parking_spot.placement %></td>
          <td><%= bike_parking_spot.racks %></td>
          <td><%= bike_parking_spot.spaces %></td>
          <td><%= bike_parking_spot.distance.round(0.01) %> miles</td>
          <td><%= link_to 'Map', bike_parking_spot, id: 'show_link'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="line"></div>

  <div class="page_links">
    <%= will_paginate @bike_parking_spots %>
  </div>

  <div class="line"></div>

</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {scrollwheel:false}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>

